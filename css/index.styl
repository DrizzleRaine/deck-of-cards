@import 'nib';

html {
  text-size-adjust: 100%;
}
body {
  font-family: 'Roboto Slab', sans-serif;
  background-color: #151515;
  overflow: hidden;
}
.scene {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  user-select: none;
}
.deck, .hand {
  position: absolute;
}

@import 'card.styl';

@media (max-height: 480px) {
  html {
    font-size: 75%;
  }
}
